<!DOCTYPE html>
<html>
  <head>
    <title>Sellout</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if session[:user_id] %>
      <p>Hello! <%= User.find(session[:user_id]).username %>. Click here to <%= link_to "Log Out", logout_path, method: 'delete' %></p>
    <% else %>
      <%= link_to 'Login', login_path %>
    <% end %><br><br><br>
    <%= yield %>
  </body>
</html>
